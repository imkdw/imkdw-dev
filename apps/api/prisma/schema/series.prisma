/// 게시글 시리즈 정보를 저장하는 테이블
model Series {
  id String @id @default(uuid())

  /// 시리즈 제목
  title String

  /// 시리즈 URL 경로
  slug String

  /// 시리즈 설명
  description String

  /// 시리즈에 속한 게시글 개수
  articleCount Int @default(0) @map("article_count")

  /// 시리즈에 속한 모든 게시글의 읽기 시간(분)
  totalReadMinute Int @default(0) @map("total_read_minute")

  /// 마지막 게시글 추가시간
  lastArticleCreatedAt DateTime? @map("last_article_created_at")

  /// 시리즈에 속한 게시글들
  articles Article[]

  /// 시리즈에 연결된 태그들
  tags SeriesTag[]

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt DateTime  @updatedAt @map("updated_at") @db.Timestamptz
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz

  @@map("series")
}
