/// 게시글 시리즈 정보를 저장하는 테이블
model Series {
  id String @id @default(uuid())

  /// 시리즈 제목
  title String

  /// 시리즈 URL 경로
  slug String

  /// 시리즈 설명
  description String

  /// 시리즈에 속한 게시글들
  articles Article[]

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("series")
}
