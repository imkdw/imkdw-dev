model Article {
  id        String    @id @default(uuid())
  title     String
  content   String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("article")
}

model ArticleHistory {
  id        String    @id @default(uuid())
  articleId String
  title     String
  content   String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  @@map("article_history")
}
